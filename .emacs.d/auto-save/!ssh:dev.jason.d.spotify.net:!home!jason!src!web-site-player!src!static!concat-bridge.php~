<?php
/* Bridge Concatenator. */
$root = '/home/keeto/src/bridge/';
$config = file_get_contents($root . 'modules');
header('Content-type: text/javascript');
header('Content-Encoding: utf8');
ob_start();
$files = preg_split('/\n/', $config);
foreach ($files as $file){
  readfile($root . $file);
}
$out = ob_get_contents();
ob_end_clean();
echo preg_replace('/^[0-9]+$/m', '', $out);
